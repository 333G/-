@{
    ViewBag.Title = "Info";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    $(function () {
        $('.wrapper').height($(window).height() - 11);
    })
    var keyValue = "@NFine.Code.OperatorProvider.Provider.GetCurrent().UserId";
    //alert(keyValue);
    $(function () {
        if (!!keyValue) {
            $.ajax({
                url: "/SystemManage/User/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#F_Account").val(data["F_Account"]);
                    $("#F_RealName").val(data["F_RealName"]);
                    $("#F_NickName").val(data["F_NickName"]);
                    $("#F_Gender").val(data["F_Gender"]);
                    $("#F_Birthday").val(data["F_Birthday"]);
                    $("#F_DepartmentId").val(data["F_DepartmentId"]);
                    $("#F_RoleId").val(data["F_RoleId"]);
                    $("#F_DutyId").val(data["F_DutyId"]);
                    $("#F_MobilePhone").val(data["F_MobilePhone"]);
                    $("#F_Email").val(data["F_Email"]);
                    $("#F_WeChat").val(data["F_WeChat"]);
                    $("#F_Signature").val(data["F_Signature"]);
                    $("#F_Description").val(data["F_Description"]);
                    $("#F_OrganizeId").val(data["F_OrganizeId"]);
                }
            });
        }
    });

    function submitForm() {
        alert(JSON.stringify($("#form1").formSerialize()));
        if (!$('#form1').formValid()) {
            return false;
        }
        $.submitForm({
            url: "/SystemManage/User/SubmitForm?keyValue=" + keyValue,
            param: $("#form1").formSerialize(),
            success: function () {
               alert("11");
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }






</script>
